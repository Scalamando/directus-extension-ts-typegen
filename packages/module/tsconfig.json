{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "rootDir": "./src",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "es2022",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",

    "declaration": true,
    "composite": true,
    "declarationMap": true,

    "lib": ["ES2022", "DOM"]
  },
  "include": ["./src/**/*", "./src/shims.d.ts"]
}
