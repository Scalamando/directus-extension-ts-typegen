{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "isolatedModules": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "rootDir": "./src",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "preserve",
    "sourceMap": true,
    "outDir": "./dist",

    "declaration": true,
    "composite": true,
    "declarationMap": true,

    "lib": ["ES2022"]
  },
  "include": ["./src/**/*.ts"]
}
