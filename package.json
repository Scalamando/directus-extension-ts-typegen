{
  "name": "directus-ts-typegen",
  "description": "A directus extension to generate TypeScript types for your schema.",
  "icon": "extension",
  "version": "0.1.0",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-bundle"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "module",
        "name": "ts-typegen-module",
        "source": "src/module/index.ts"
      },
      {
        "type": "endpoint",
        "name": "ts-typegen-endpoint",
        "source": "src/endpoint/index.ts"
      }
    ],
    "host": "^10.10.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "validate": "directus-extension validate",
    "add": "directus-extension add"
  },
  "devDependencies": {
    "@directus/extensions": "^3.0.6",
    "@directus/extensions-sdk": "13.1.1",
    "@shikijs/langs": "^3.6.0",
    "@shikijs/themes": "^3.6.0",
    "@types/node": "^22.15.30",
    "@vueuse/core": "^13.3.0",
    "pluralize-esm": "^9.0.5",
    "prettier": "^3.5.3",
    "shiki": "^3.6.0",
    "typescript": "^5.8.3",
    "vue": "^3.5.16"
  }
}
